doctype html
html
  head
    title Clientes
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body.bg-light
    .container.mt-5
      h1.mb-4 Lista de Clientes
      a.btn.btn-primary.mb-3(href="/clientes/create") Novo Cliente

      table.table.table-striped
        thead
          tr
            th ID
            th Nome
            th Email
            th Ações
        tbody
          each cliente in clientes
            tr
              td= cliente.id
              td= cliente.nome
              td= cliente.email
              td
                a.btn.btn-sm.btn-warning(href=`/clientes/${cliente.id}`) Editar
                form(action=`/clientes/${cliente.id}/delete`, method="POST", style="display:inline")
                  button.btn.btn-sm.btn-danger(type="submit") Excluir
