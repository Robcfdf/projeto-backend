doctype html
html
  head
    title Criar Cliente
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.text-center.mb-4 Novo Cliente

      form(action="/clientes" method="POST")
        .form-group
          label(for="nome") Nome:
          input.form-control(type="text" id="nome" name="nome" placeholder="Digite o nome" required)
        .form-group.mt-3
          label(for="email") Email:
          input.form-control(type="email" id="email" name="email" placeholder="Digite o email" required)
        button.btn.btn-success.mt-3(type="submit") Salvar
        a.btn.btn-secondary.mt-3(href="/clientes") Voltar
